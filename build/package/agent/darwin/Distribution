<?xml version="1.0" encoding="utf-8" standalone="no"?>
<installer-script minSpecVersion="1.000000">
    <title>__PRODUCT__</title>
    <welcome file="welcome.html" mime-type="text/html" />
    <conclusion file="conclusion.html" mime-type="text/html" />
    <license file="LICENSE.txt"/>
    <options customize="never" allow-external-scripts="no"/>
    <domains enable_localSystem="true" />
    <installation-check script="installCheck();"/>
    <script>
function installCheck() {
    if(!(system.compareVersions(system.version.ProductVersion, '10.12.0') >= 0)) {
        my.result.title = 'Unable to install';
        my.result.message = '__PRODUCT__ requires Mac OS X 10.12 or later.';
        my.result.type = 'Fatal';
        return false;
    }
    if(system.files.fileExistsAtPath('/Library/__PRODUCT__/__PRODUCT__')) {
        my.result.title = 'Previous installation detected';
        my.result.message = 'A previous installation of __PRODUCT__ is found at /Library/__PRODUCT__/. The installer will remove it before starting the installation process.';
        my.result.type = 'Warning';
        return false;
    }
    return true;
}
    </script>
    <choices-outline>
        <line choice="__PRODUCT__"/>
    </choices-outline>
    <choice id="__PRODUCT__" title="__PRODUCT__">
        <pkg-ref id="__PRODUCT__.pkg"/>
    </choice>
    <pkg-ref id="__PRODUCT__.pkg" auth="Root">__PRODUCT__.pkg</pkg-ref>
</installer-script>
